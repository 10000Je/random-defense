{
  "version": "2.0.0",
  "runner": "terminal",
  "type": "shell",
  "echoCommand": true,
  "presentation": {
    "reveal": "always"
  },
  "tasks": [
    {
      "label": "C++: 파일 실행",
      "command": "./${fileBasenameNoExtension}",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "test"
    },
    {
      "label": "Java: 파일 실행",
      "type": "shell",
      "command": "java ${fileBasenameNoExtension}",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "test"
    },
    {
      "type": "cppbuild",
      "label": "C++: g++ 활성 파일 빌드",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "컴파일러: /usr/bin/g++"
    },
    {
      "label": "Java: javac 활성 파일 빌드",
      "command": "javac",
      "args": ["--release", "11", "${fileBasename}"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "build",
      "detail": "컴파일러: /usr/bin/javac"
    }
  ]
}
